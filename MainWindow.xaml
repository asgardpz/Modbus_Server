<Window x:Class="CMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS"
        mc:Ignorable="d"
        Title="Modbus_Server" Height="768" Width="1024" Closing="Window_Closing" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Width="Auto" Margin="0,61,-0.4,0.4">
            <Canvas x:Name="container" Background="#FFECEEDF" />
        </ScrollViewer>
        <Canvas HorizontalAlignment="Left" Height="52" Margin="3,5,0,0" VerticalAlignment="Top" Width="1010" Background="#FFECFAFA">
            <Button x:Name="Btn_Start" Content="Start" Canvas.Left="15" Canvas.Top="16" Width="45" Click="Btn_Start_Click"/>
            <Button x:Name="Btn_End" Content="End" Canvas.Left="72" Canvas.Top="16" Width="45" Click="Btn_End_Click" />
        </Canvas>
    </Grid>
</Window>
